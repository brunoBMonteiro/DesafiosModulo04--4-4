{% extends "layout.njk" %}

{% block content %}

    <div class="card">

        <section 
            class="avatar" 
            style="background: url(https://source.unsplash.com/collection/94804057/500x500) no-repeat center center / cover">
        </section>

        
            

            <section class="details">

                <form method="POST" action="/professors?_method=PUT">

                    <h3>Editar Instrutor</h3>

                    {% include 'professors/fields.njk' %}

                    <input 
                        type="hidden" 
                        name="id" 
                        value={{ professor.id }}
                    >

                </form>

                <form id="form-delete" action="/professors?_method=DELETE" method="post">
                    <input type="hidden" name="id" value={{professor.id}}>
                    <button type="submit">Deletar</button>
                </form>
            </section>

        

    </div>
{% endblock content %}