{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/professors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/94804057/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="select">
                        <option value="EM">Ensino médio</option>
                        <option value="ES">Ensino Superior</option>
                        <option value="M">Mestrado</option>
                        <option value="D">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="gender" value="presencial" checked="checked">Presencial</span>
                    <span><input type="radio" name="gender" value="distancia">À distancia</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="atuacao" placeholder="descreva sua área de atuação">
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>
{% endblock content %}